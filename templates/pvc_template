apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name:
spec:
  accessModes:
  - 
  resources:
   requests:
     storage: 500Mi

--- Use it in a POD ---

apiVersion: v1
kind: Pod
metadata:
  name:
spec:
  containers:
  - name:
    image:
    volumeMounts:
    - name:
      mountPath:
  volumes:
  - name:
    persistentVolumeClaim:
      claimName: